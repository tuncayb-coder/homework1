def sum_all(*args):
    return sum(args)

print(sum_all(2,5,6,7))
print(sum_all(7,4,5,8))
  
  def calculate_product(*args):
    result = 1
    for num in args:
        result *= num
    return (result)

print(calculate_product(3,5,6))
print(calculate_product(9,3,5))
  def sum_of_numbers(*numbers):
    return sum(numbers)

print(sum_of_numbers(6,2,13))
print(sum_of_numbers(99,4))
  
  def calculate_power():
    base = 4
    exponent = 2 
    power = base**exponent
    print (power)
