def greet_user(*args):
 for name in args:
  print(f"Hello, {name}")
greet_user("Tuncay")

def calculate_area():
    radius = 5
    area = radius**2
    print(area)
calculate_area()

def average_number():
    numbers = [3,5,6,7,2,6]
    average = sum(numbers) / len(numbers)
    print(average)
average_number()

def maximum_number():
    numbers = [3,6,13,4,7]
    maximum = max(numbers)
    print(maximum)
maximum_number()

def greet_with_salutation(*args):
    for salutation, name in args:
        print(f"Hello, {salutation} {name}")

